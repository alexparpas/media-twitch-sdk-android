<?xml version="1.0" encoding="utf-8"?>
<resources>

    <drawable name="mt_main_background">#FFFFFF</drawable>
    <drawable name="mt_more_background">#FFFFFF</drawable>
    <color name="mt_default_text_color">#000000</color>
    <string name="mt_category_more">See All</string>
    <string name="mt_error_generic">Could not load videos</string>

    <style name="BaseTwitchThumbnailIvStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="BaseTwitchDurationTvStyle">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="BaseTwitchLiveTvStyle">
        <item name="android:background">#D03125</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="BaseTwitchTitleTvStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/mt_default_text_color</item>
    </style>

    <style name="BaseTwitchChannelTvStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/mt_default_text_color</item>
    </style>

    <style name="BaseTwitchViewsTvStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/mt_default_text_color</item>
    </style>

    <style name="BaseTwitchCategoryTitleTvStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mt_default_text_color</item>
    </style>

    <style name="BaseTwitchCategoryDescriptionTvStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mt_default_text_color</item>
        <item name="android:text">@string/mt_category_more</item>
    </style>

    <style name="BaseTwitchSeeAllTvStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mt_default_text_color</item>
        <item name="android:text">@string/mt_category_more</item>

    </style>

    <style name="MtCategoryTitleTvStyle" parent="BaseTwitchCategoryTitleTvStyle" />

    <style name="MtCategoryDescriptionTvStyle" parent="BaseTwitchCategoryTitleTvStyle" />

    <style name="MtThumbnailIvStyle" parent="BaseTwitchThumbnailIvStyle" />

    <style name="MtDurationTvStyle" parent="BaseTwitchDurationTvStyle" />

    <style name="MtLiveTvStyle" parent="BaseTwitchLiveTvStyle" />

    <style name="MtTitleTvStyle" parent="BaseTwitchTitleTvStyle" />

    <style name="MtChannelTvStyle" parent="BaseTwitchChannelTvStyle" />

    <style name="MtViewsTvStyle" parent="BaseTwitchViewsTvStyle" />

    <style name="MtSeeAllTvStyle" parent="BaseTwitchSeeAllTvStyle" />
</resources>